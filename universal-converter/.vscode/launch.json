  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'universal-converter'",
      "cargo": {
        "args": [
          "build",
          "--bin=universal-converter",
          "--package=universal-converter"
        ],
        "filter": {
          "name": "universal-converter",
          "kind": "bin"
        }
      },
      "args": ["MDL", "EUR", "1"],
      "cwd": "${workspaceFolder}"
    }
  ]
